MainWidget:

<MainWidget>:
    BoxLayout:
        orientation: "vertical"
        BackgroundLabel
            id: date_label
            text: root.date_text
            background_color: 1, .3, .4, .75
            size_hint: 1, .1

        Widget:
            opacity: .8
            id: list_canvas
            canvas.before:
                Color:
                    rgba: .4, .4, .4, 0.9
                Rectangle:
                    size: self.size
                    pos: self.pos
            ScrollView:
                size: self.parent.size[0], self.parent.size[1]-30
                pos: (0, 30)
                GridLayout:
                    id: grid_lay
                    cols: 4
                    rows: 20
                    size: self.parent.size[0], self.parent.size[1]-30
                    size_hint_x: 1
                    size_hint_y: None
                    pos: (0, 30)
                    cols_minimum: {0: root.width*6/10, 1: root.width*2/10, 2: root.width/10, 3: root.width/10}
                    row_default_height: 50
                    row_force_default: True
                    height: self.minimum_height
                    do_scroll_x: True
                    do_scroll_y: True


            BoxLayout:
                orientation: "horizontal"
                height: 90
                width: root.width
                TextInput:
                    id: text_input1
                    text: root.text_input_str1
                    size_hint_x: .7
                    multiline: False
                    on_text_validate: root.on_text_validate(self)
                TextInput:
                    id: text_input2
                    text: root.text_input_str2
                    size_hint_x: .2
                    multiline: False
                    on_text_validate: root.on_text_validate(self)
                Button:
                    id: enter_button
                    size_hint_x: .1
                    on_press: root.on_text_validate(self)


<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0
    halign: 'left'

